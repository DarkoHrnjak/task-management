{% extends 'base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}
    <h1>Task List</h1>
    <a href="{{ path('task_new') }}">Create New Task</a>
    <ul>
        {% for task in tasks %}
            <li>
                <a href="{{ path('task_show', {id: task.id}) }}">{{ task.title }}</a>
                - <a href="{{ path('task_edit', {id: task.id}) }}">Edit</a>
                - <a href="{{ path('task_delete', {id: task.id}) }}" onclick="return confirm('Are you sure?')">Delete</a>
            </li>
        {% else %}
            <li>No tasks available</li>
        {% endfor %}
    </ul>
{% endblock %}
