{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
    <div class="task-detail">
        <h2>Task: {{ task.title }}</h2>
        <div class="detail-item">
            <label>Description:</label>
            <span>{{ task.description }}</span>
        </div>
        <div class="detail-item">
            <label>Due Date:</label>
            <span>{{ task.dueDate ? task.dueDate|date('Y-m-d') : 'None' }}</span>
        </div>
        <div class="detail-item">
            <label>Priority:</label>
            <span>{{ task.priority }}</span>
        </div>
        <div class="detail-item">
            <label>Status:</label>
            <span>{{ task.status }}</span>
        </div>
        <div class="detail-item">
            <label>Assigned To:</label>
            <span>{{ task.assignedTo }}</span>
        </div>
        <div class="detail-item">
            <label>Created At:</label>
            <span>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i') : 'N/A' }}</span>
        </div>
        <div class="detail-item">
            <label>Updated At:</label>
            <span>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i') : 'N/A' }}</span>
        </div>
        <div class="detail-item">
            <label>Completed:</label>
            <span>{{ task.isCompleted ? 'Yes' : 'No' }}</span>
        </div>
        <a href="{{ path('tasks_index') }}" class="back-button">Back to Task List</a>
    </div>
{% endblock %}
