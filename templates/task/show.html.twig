{% extends 'base.html.twig' %}

{% block title %}View Task{% endblock %}

{% block body %}
    <div class="task-view-container">
        <div class="task-card">
            <h1>{{ task.title }}</h1>
            <p class="description">{{ task.description }}</p>

            <div class="task-details">
                <div class="detail">
                    <strong>Status:</strong>
                    <span class="status {{ task.status|lower }}">{{ task.status|capitalize }}</span>
                </div>
                <div class="detail">
                    <strong>Priority:</strong> {{ task.priority }}
                </div>
                <div class="detail">
                    <strong>Assigned To:</strong> {{ task.assignedTo }}
                </div>
                <div class="detail">
                    <strong>Due Date:</strong>
                    {{ task.dueDate ? task.dueDate|date('Y-m-d H:i') : 'No due date' }}
                </div>
                <div class="detail">
                    <strong>Created At:</strong> {{ task.createdAt|date('Y-m-d H:i') }}
                </div>
                <div class="detail">
                    <strong>Last Updated:</strong> {{ task.updatedAt|date('Y-m-d H:i') }}
                </div>
            </div>

            <div class="task-actions">
                <a href="{{ path('task_edit', { id: task.id }) }}" class="btn btn-primary">Edit Task</a>
                <a href="{{ path('tasks_index') }}" class="btn btn-secondary">Back to Task List</a>
            </div>
        </div>
    </div>
{% endblock %}
